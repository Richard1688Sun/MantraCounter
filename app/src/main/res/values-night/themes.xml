<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MantraCounter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold_light</item>
        <item name="colorPrimaryVariant">@color/gold_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="floatingButton" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@color/button_green</item>
    </style>

    <style name="basicBackground" parent="Theme.AppCompat.DayNight">
        <item name="android:background">@color/gold_night</item>
    </style>

    <style name="noRipple" parent="Theme.AppCompat.DayNight">
        <item name="rippleColor">@android:color/transparent</item>
        <item name="backgroundColor">@color/gold_night</item>
        <item name="backgroundTint">@color/gold_night</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>